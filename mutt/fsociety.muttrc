###
# personal
###


set from      = "anonymous@fsociety.info"
set sendmail  = "/usr/bin/msmtp -a personal"
set mbox      = "+personal/INBOX"
set record    = "+personal/Sent"
set postponed = "+personal/Draft"
color status cyan default

macro index ,c "<change-folder>+work/INBOX<return>" "change accounts"
macro index D "<save-message>+work/Trash<enter>" "move message to the trash"
macro index S "<save-message>+work/Spam<enter>"  "mark message as spam"
